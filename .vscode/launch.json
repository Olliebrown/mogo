    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch for Debug",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "debug"
            ],
            "port": 19336,
            "protocol": "inspector",
            "sourceMaps": true,
            "preLaunchTask": "build",
            "outFiles": [
                "${workspaceRoot}/dist/**.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "start"
            ],
            "port": 19336,
            "protocol": "inspector",
            "preLaunchTask": "build"
        }
    ]
}
